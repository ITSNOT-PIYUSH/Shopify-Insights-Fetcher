# Environment Configuration for Shopify Insights Fetcher

# Application Settings
DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

# Database Configuration (MySQL)
# If DATABASE_URL is provided, it takes precedence over individual settings
DATABASE_URL=mysql://username:password@localhost:3306/shopify_insights

# Individual database settings (used if DATABASE_URL is not provided)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopify_insights
DB_USER=root
DB_PASSWORD=your_password_here

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Scraping Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
